{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Debug NestJS",
			"smartStep": true,
			"skipFiles": [
				"node_modules",
				"<node_internals>",
				"**/async_hooks.js",
				"async_hooks.js",
				"**/internal/**/*"
			],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"program": "${workspaceFolder}\\src\\main",
			"console": "integratedTerminal",
			"autoAttachChildProcesses": true
		}
	]
}
